{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "types": ["node", "playwright", "jest"],
      "plugins": [
        {
          "name": "next"
        }
      ],
      "paths": {
        "@/*": [
          "./src/*"
        ],
        "@tests/*" : [
          "./tests/*"
        ]
      },
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "next-env.d.ts",
      "./types/theme.d.ts",
      "**/*.ts",
      "**/*.test.ts",
      "**/*.tsx",
      ".next/types/**/*.ts",
      ".eslintrc.js",
      "next.config.js",
      "lint-staged.config.mjs"
    ],
    "exclude": [
      "src/gql",
      "node_modules"
    ]
  }
